@model School_Library.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameBook)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameBook)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.NameCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.NameCategory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorBooks)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>AuthorID</th>
                    <th>NameAuthor</th>
                </tr>
                @foreach (var item in Model.AuthorBooks)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author.AuthorID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author.NameAuthor)
                        </td>
                    </tr>
                   
                }
            </table>

        </dd>
       

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BookID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
