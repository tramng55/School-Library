@model IEnumerable<School_Library.Models.BorrowAssignment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th> Student </th>
            <th> Book </th>
            <th> Status </th>
            <th></th>
        </tr>
    </thead>
    <tbody>  
@foreach (var item in Model) {
        <tr>
             <td>
                    @Html.DisplayFor(modelItem => item.Student.StudentID) - @Html.DisplayFor(modelItem => item.Student.NameStudent)
             </td>
             <td>
                    @Html.DisplayFor(modelItem => item.Book.BookID) - @Html.DisplayFor(modelItem => item.Book.NameBook)
             </td>
             <td>
                    @Html.DisplayFor(modelItem => item.Status)
             </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.BorrowAssignmentID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BorrowAssignmentID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BorrowAssignmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
