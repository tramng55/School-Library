@model IEnumerable<School_Library.Models.BorrowAssignment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student.StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameStudent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.BookID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameBook)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.StudentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.NameStudent)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookID)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.NameBook)
                </td>
           
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.BorrowAssignmentID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BorrowAssignmentID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BorrowAssignmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
